<%= form_for([@clip, @opinion, @opinion.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label :名前, {class: "commenter"} , id: "exampleFormControlTextarea1", style: "width:200px;font-size:20px" %><br>
    <%= f.text_field :commenter %>
  </div>
  <div class="form-group">
    <%= f.label :本文 , {class: "comment_body"} ,  id: "exampleFormControlTextarea1", rows: "5",  style: "width:200px;font-size:20px" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions" >
    <%= f.submit "投稿する",  class: "btn btn-danger",  style: "width:170px;font-size:20px" %>
  </div>
<% end %>
</div>