<h1>Clips</h1>
<div class="container">
  <div class="card-columns">
    <% @clips.each do |clip| %>
      <div class="card">
        <img class="card-img-top" src="<%= clip.image %>" style = "width: 100%;height: 200px" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= clip.title %></h5>
            <p class="card-text"><%= clip.description %></p>
            <%= link_to 'Show Opinion', clip, class: "btn btn-primary" %>
          </div>
      </div>
    <% end %>
  </div>
</div>

