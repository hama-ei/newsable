<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <% article.categories.each do |category| %>
        <td><%= category.name %></td>
        <% end %>
        <% if user_signed_in? %>
        <td><%= link_to '編集', edit_article_path(article) %></td>
        <td><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></td>
　　　　<% else %>
    　　<%= link_to "ログイン", new_user_session_path %>
　　　　<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
