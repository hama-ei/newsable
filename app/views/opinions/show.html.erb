<div class="container">
<h3>コメント</h3>
<div class="card-groups">
<% @opinion.comments.each do |comment| %>
<div class="card">
  <div class="row no-gutters">
    <h4 class="card-title" style = "margin:20px;"><%= comment.commenter %><br><span style = "font-size:15px;"><%= comment.created_at %></span></h4>
    <div class="col-md-8">
      <div class="card-body">
        <p style = "font-size:20px"><%= comment.body %>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div><br>


