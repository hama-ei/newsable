        <h5 class="card-title"><%= article["title"] %><a><%= article["publishedAt"].in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M')  %></a></h5>
        <p style = "font-size:20px"><%= article["description"] %>
        <br><br><a class="btn btn-primary" href="<%= article["url"]  %>" target="_blank">記事の続きを読む</a>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>