<h1>Articles</h1>
<table style = "width:100%;">
  <thead>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style = "width: 100%;">
      <tr>
        <% @articles.each do |article| %>
        <td><img class="card-img-right flex-auto d-none d-lg-block" src="<%= article["urlToImage"] %>"  style="width: 200px; height: 250px;"></td>
        <td><%= article["title"] %><br><%= article["publishedAt"] %></br></td>
        <td><%= article["description"] %><br><a href="<%= article["url"]%>">Continue reading</a></br></td>
      </tr>
    <% end %>
  </div>
  </tbody>
</table>