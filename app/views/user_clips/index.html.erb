<div style ="text-align: center;">
<% if user_signed_in? %>
<%= link_to 'お気に入りを追加', new_user_clip_path,  class: "btn btn-danger btn-lg" ,:style=>"color:white;" , data: {"turbolinks" => false} %>
<% end %>
</div>
<h1>お気に入り</h1>
<div class="card-groups">
<% @user_clips.each do |user_clip| %>
<div class="card">
  <div class="row no-gutters">
    <% clip = user_clip.clip %>
    <div class="col-md-4" style = "max-height: 230px;width: 200px;">
      <img src="<%= clip.image %>" class="card-img" alt="news-image" style = "height:100%;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= clip.title %><a><%= clip["publishedAt"] %></a></h4>
        <p style = "font-size:20px"><%= clip.description %>
        <br><br><a href="<%=  clip.url %>" target="_blank" , class="btn btn-primary btm-sn">記事の続きを読む</a>
        <%= link_to '削除', user_clip, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } , class: "btn btn-secondary btm-sn"%>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>