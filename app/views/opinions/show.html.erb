<h3>コメント投稿</h3>
<form>
  <%= form_for([@clip, @opinion, @opinion.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.text_field :commenter, class: "form-control" , id: "exampleFormControlTextarea1", placeholder: "名前", style: "width:200px;"%>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control" ,  id: "exampleFormControlTextarea1", rows: "5", placeholder: "200文字まで",  style: "font-size:20px"%>
  </div>
  <div class="actions">
    <%= f.submit "投稿する",  class: "btn btn-danger",  style: "width:170px;" %>
  </div>
  <% end %>
</form>
</div>