<div class ="container" style = "width:60%;">
<h3>Create Opinion</h3>
<%= form_for([@clip, @opinion]) do |form| %>

  <div class="form-group">
    <%= form.text_field :title, class: "form-control", id: "exampleFormControlTextarea1", rows: "3" , placeholder: "タイトル"%>
  </div>

  <div class="form-group">
    <%= text_field_tag :body,'', class: "form-control", id: "exampleFormControlTextarea1", rows: "3" , placeholder: "200文字まで", maxlength: "200",  style: "height:300px;"%>
  </div>
  <div class="actions">
    <%= form.submit "Create",  class: "btn btn-primary",  style: "width:150px;"%>
  </div>
<% end %>
</div>