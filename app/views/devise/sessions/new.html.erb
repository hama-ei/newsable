<div class ="container">
<h4 style = "text-align: center;">ログイン</h4>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, for: "exampleInputEmail1"%><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password, for: "exampleInputPassword1"%><br/>
    <%= f.password_field :password, autocomplete: "current-password",  placeholder: "Password", class: "form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check"">
      <%= f.check_box :remember_me,  class: "form-check-input" %>
      <%= f.label :Check_me_out, for: "exampleCheck1"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
